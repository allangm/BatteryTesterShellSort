<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/msg1"
            android:layout_gravity="center_horizontal"
            android:textColor="#ff060606"
            android:text="@string/mensaje1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/msg2"
            android:layout_gravity="center_horizontal"
            android:textColor="#ff000000"
            android:text="@string/mensaje1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/batteryTxt"
            android:layout_gravity="center_horizontal"
            android:textColor="#ff000000"
            android:text="@string/mensaje1" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/BotonShell"
            android:id="@+id/buttonEjecutarBubbleSort"
            android:layout_centerHorizontal="true"
            android:onClick="ejecutarShellSort"
            android:enabled="true"
            android:clickable="true"
            android:textColor="#ff000000"
            android:singleLine="true"
            android:visibility="visible"
            android:background="#95aeaea5" />


    </LinearLayout>

</RelativeLayout>
